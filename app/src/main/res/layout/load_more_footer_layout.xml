<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/loadingView"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:padding="5dp">

    <Space android:id="@+id/placeholder" android:layout_width="1px"
           android:layout_height="1px" android:layout_centerInParent="true"
           android:layout_margin="5dp"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:progressBarStyleInverse"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_toLeftOf="@id/placeholder"/>

    <TextView android:id="@+id/loading_tv" android:layout_width="wrap_content"
              android:layout_height="wrap_content" android:layout_centerVertical="true"
              android:layout_toRightOf="@id/placeholder"
              android:text="@string/loading"
              android:textColor="@android:color/black"
              android:textSize="12dp"/>

</RelativeLayout>
